          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "description": "Email of contact",
            "type": "string",
            "example": "example@example.com"
          },
          "password": {
            "description": "Email of contact",
            "type": "string",
            "example": "***********"
          }
        }
      }
    },
    "responses": {
